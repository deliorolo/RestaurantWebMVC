@model RestaurantWeb.Models.SoldProductModel

@{
    ViewBag.Title = "Delete";
}
<br />
<h3>Are you sure you want to remove this product from the table?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Category
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category.Name)
        </dd>

        <dt>
            Price
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price) €
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

    <div class="form-actions no-color btn-group">
        <input type="submit" value="Remove" class="btn btn-danger" />
        <button onclick="location.href='@Url.Action("TableCategories", "MainMenu", new { id = Model.TableID })'" type="button" class="btn btn-warning">Return</button>
    </div>
    }
</div>
<br />
